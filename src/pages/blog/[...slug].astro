---
import { getCollection } from 'astro:content'
import Layout from '@layouts/Page.astro'
import { defaultLang, getEntryStaticPaths } from '@i18n/utils'
import Hero from '@components/Hero.astro'
import { GrantCodesContainer } from '@grantcodes/ui/components/container/container.component.js'

export async function getStaticPaths() {
  const blogEntries = await getCollection('blog')
  const staticPaths = getEntryStaticPaths(blogEntries).filter(
    (path) => path.params.lang === defaultLang
  )

  return staticPaths
}

const { entry } = Astro.props
if (!entry) {
  throw new Error('No entry provided')
}
const { Content } = await entry.render()
const metadata = {
  title: entry.data.title,
  description: entry.data.description,
}
---

<Layout metadata={metadata}>
  <article style="background: none;">
    <Hero title={entry.data.title} center />
    <GrantCodesContainer>
      <Content />
    </GrantCodesContainer>
  </article>
</Layout>

<style>
  grantcodes-container {
    padding-block: calc(var(--size-space-unit) * 4);
  }
</style>
